<h2>Book Databank</h2>

<table class="table-hover">
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Version</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src='<%= book.picture %>' width='150px' height='200px' /></td>
        <td><%= book.title %></td>
        <td><%= book.version %></td>
        <td><%= book.year %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
